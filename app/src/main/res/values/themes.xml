<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LibreCBT" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
    </style>

    <style name="Theme.LibreCBT.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LibreCBT.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LibreCBT.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>